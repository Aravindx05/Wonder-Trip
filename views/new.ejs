<% layout("layouts/boilerplate") %>
<div class="row mt-3">    
    <div class="col-8 offset-2">
<h3>Create a New listing</h3>
<br>
    <form method="post" action="/listing"  novalidate  class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3"> 
            <label for="title" class="form-label">Title</label>
             <input name="listings[title]" placeholder="enter title" type="text" class="form-control" required>
            <div class="valid-feedback">Title Looks Good!</div>
        </div> 
        <div class="mb-3"> 
            <label for="description" class="form-label">Description</label>
             <textarea name="listings[description]" placeholder="enter description" class="form-control" required></textarea>
             <div class="invalid-feedback">PLease Enter a Short description</div>
        </div>
         <div class="mb-3"> 
            <label for="image" class="form-label">Upload Image</label>
            <input name="listings[image]" type="file" class="form-control" required>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4"> 
            <label for="price" class="form-label">Price</label>
            <input name="listings[price]" placeholder="1200" type="number" class="form-control" required>
            <div class="invalid-feedback">price should be vaild</div>
        </div>
        <div class="mb-3 col-md-8"> 
            <label for="country" class="form-label">Country</label>
            <input name="listings[country]" placeholder="india" type="text" class="form-control" required>
            <div class="invalid-feedback">Country should be vaild</div>
        </div></div>
        <div class="mb-3"> 
            <label for="location" class="form-label">Location</label>
             <input name="listings[location]" placeholder="hyderbad" type="text" class="form-control" required>
             <div class="invalid-feedback">Country Location should be vaild</div>
        </div>
        <br>
    <button class="btn btn-dark add-btn">Add</button><br><br>
</form>     
</div>
</div>